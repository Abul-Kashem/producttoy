<div class="container my-5">
    <h1 class="lead text-center">
        My Address
    </h1>


    <!-- Button trigger modal -->
    <button class="btn btn-primary rounded-0" data-bs-target="#newAddressModal" data-bs-toggle="modal" type="button">
        Create New Address
    </button>


    <div class="row row-cols-md-4 row-cols-4 my-5 gx-2">
        {%- for address in customer.addresses -%}
            <div class="col">
                <div class="card">
                    <div class="card-body">

                        {{ address | format_address }}

                    </div>

                    <div class="card-footer">
                        <form action="/account/addresses/{{ address.id }}">
                            <input name="_method" type="hidden" value="delete">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                </div>

            </div>
        {%- endfor -%}
    </div>
</div>


<!-- Modal -->
<div aria-hidden="true" aria-labelledby="newAddressModalLabel" class="modal fade" id="newAddressModal" tabindex="-1">

    {%- form 'customer_address', customer.new_address -%}

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newAddressModalLabel">Add New Address</h5>
                    <button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button"></button>
                </div>
                <div class="modal-body">
                    <div class="col-12 mb-3">
                        <label for="AddressFirstNameNew">First Name</label>
                        <input type="text" name="address[first_name]" id="AddressFirstNameNew" value="{{ form.first_name }}" class="form-control">
                    </div>


                    <div class="col-12 mb-3">
                        <label for="AddressLastNameNew">Last Name</label>
                        <input type="text" name="address[last_name]" id="AddresLastNameNew" value="{{ form.last_name }}" class="form-control">
                    </div>

                    <div class="col-12 mb-3">
                        <label for="AddressCompanyNew">Company</label>
                        <input type="text" name="address[company]" id="AddressCompanyNew" value="{{ form.company }}" class="form-control">
                    </div>

                    <div class="col-12 mb-3">
                        <label for="AddressAddress1New">Address</label>
                        <input type="text" name="address[address1]" id="AddressAddress1New" value="{{ form.address1 }}" class="form-control">
                    </div>


                    <div class="col-12 mb-3">
                        <label for="AddressAddress2New">Apartment, Suite, etc</label>
                        <input type="text" name="address[address2]" id="AddressAddress2New" value="{{ form.address2 }}" class="form-control">
                    </div>

                    <div class="row mb-3">

                        <div class="col-12 col-md-4 mb-3">
                            <label for="AddressCityNew">City</label>
                            <input type="text" name="address[city]" id="AddressCityNew" value="{{ form.city }}" class="form-control">
                        </div>

                        <div class="col-12 col-md-4 mb-3">
                            <label for="AddressCountryNew">Country</label>
                            <select class="form-control" id="AddressCountryNew" name="address[country]">{{ all_country_option_tags }}</select>
                        </div>

                        <div class="col-12 col-md-4 mb-3">
                            <label for="AddressProvinceNew">Province</label>
                            <select class="form-control" disabled="disabled" id="AddressProvinceNew" name="address[province]"></select>
                        </div>

                    </div>


                    <div class="col-12 mb-3">
                        <label for="AddressZipNew">Postal/Zip Code</label>
                        <input type="text" name="address[zip]" id="AddressZipNew" value="{{ form.zip }}" class="form-control">
                    </div>

                    <div class="col-12 mb-3">
                        <label for="AddressPhoneNew">Phone Number</label>
                        <input type="text" name="address[phone]" id="AddressZipNew" value="{{ form.phone }}" class="form-control">
                    </div>


                </div>
                <div class="modal-footer">
                    <!-- <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Close</button>
                    <button class="btn btn-primary" type="button">Save changes</button> -->

                    <button class="btn btn-primary" type="submit">Create Address</button>
                </div>
            </div>
        </div>

    {%- endform -%}


</div>