{%- comment -%}
    {% section 'collection-template' %}
{%- endcomment -%}

<div class="container">
    {% paginate collection.products by section.settings.pagination %}

        <div class="row my-5">
            <h2 class="text-center">{{ collection.title }}</h2>
        </div>

        <div class="row justify-content-center my-5">
            {%- for product in collection.products -%}
                {%- assign image = product.featured_media.preview_image -%}
                <div class="col-3 g-2">
                    <div class="card">
                        {%- if image != blank -%}
                            <a href="" id="productInforAnchor" product-handle="{{ product.handle }}" product-price="{{ product.price | money_without_trailing_zeros }}">
                                <img class="card-img-top" src="{{ image | img_url: 'medium' }}" alt="{{ product.title }}">
                            </a>
                        {%- else -%}
                            {{ 'product-1' | placeholder_svg_tag: 'card-img-top'}}
                        {%- endif -%}

                        <div class="card-body">
                            <h3>
                                <a href="{{ product.url }}">{{ product.title }}</a>
                            </h3>
                            <p>{{ product.price | money_without_trailing_zeros }}</p>
                        </div>
                    </div>
                </div>

            {%- else -%}

                <p>No Matches</p>

            {%- endfor -%}
        </div>


        
        {% if paginate.pages > 1 %}


            <!-- {{ paginate | default_pagination }} -->


            <nav aria-label="...">
                <ul class="pagination justify-content-center">
                  

                  {%- if paginate.previous.is_link -%}
                    <li class="page-item">
                        <a class="page-link" href="{{ paginate.previous.url }}">{{ paginate.previous.title }}</a>
                    </li>
                  {%- endif -%}


                  {%- for part in paginate.parts -%}
                  {%- if part.is_link -%}
                    <li class="page-items">
                        <a class="page-link" href="{{ part.url }}">{{ part.title }}</a>
                    </li>
                  {%- else -%}
                  <li class="page-item disabled">
                    <a class="page-link" href="{{ part.url }}" tabindex="-1" aria-disabled="true">{{ part.title }}</a>
                  </li>
                        
                  {%- endif -%}
                  {%- endfor -%}
                


                {%- if paginate.next.is_link -%}
                    <li class="page-item">
                        <a class="page-link" href="{{ paginate.next.url }}">{{ paginate.next.title }}</a>
                    </li>
                {%- endif -%}

                </ul>
              </nav>
            </nav>


        {% endif %}

    {% endpaginate %}


</div>

