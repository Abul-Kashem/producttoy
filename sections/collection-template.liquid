{% comment %}
    {% layout 'theme.alternate' %}
{% endcomment %}
{%- comment -%}
    {% paginate collection.products by section.settings.pagination %}
                    <h1>{{ collection.title }}</h1>
                   
                   
                    {% for product in collection.products %}
                        <div>
                            <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
                            {{ product.price | money }}
                            {% unless product.available %}<br/><strong>sold out</strong>
                            {% endunless %}
                            <a href="{{ product.url | within: collection }}">
                                <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}"/>
                            </a>
                        </div>
                    {% else %}
                        <p>no matches</p>
                    {% endfor %}
            
            
            
                    {% if paginate.pages > 1 %}
                        {{ paginate | default_pagination }}
                    {% endif %}
                {% endpaginate %}
                
                
                {% schema %}
    
    {
        "name": "Collection Template",
        "settings": [
            {
                "type": "range",
                "id": "pagination",
                "min": 5,
                "max": 25,
                "step": 5,
                "label": "Products per page",
                "default": 5
            }
        ]
    }
    
    {% endschema %}
{%- endcomment -%}


<div class="container">
    {% paginate collection.products by 12 %}

        <div class="row my-5">
            <h2 class="text-center">{{ collection.title }}</h2>
        </div>

        <div class="row justify-content-center">
            <select id="sortBy" name="sorting" class="form-select form-select-sm w-25">
                {%- for option in collection.sort_options -%}
                    <option value="{{ option.value }}" {%- if option.value == collection.sort_by -%} selected {%- endif -%}>
                        {{ option.name }}
                    </option>

                {%- endfor -%}
            </select>
        </div>


        <div class="row justify-content-center my-5">
            {%- for product in collection.products -%}
                {%- assign image = product.featured_media.preview_image -%}
                <div class="col-3 g-2">
                    <div class="card">
                        {%- if image != blank -%}
                            <a href="{{ product.url }}" id="productInforAnchor" product-handle="{{ product.handle }}" product-price="{{ product.price | money_without_trailing_zeros }}">
                                <img class="card-img-top" src="{{ image | img_url: 'medium' }}" alt="{{ product.title }}">
                            </a>
                        {%- else -%}
                            {{ 'product-1' | placeholder_svg_tag: 'card-img-top'}}
                        {%- endif -%}

                        <div class="card-body">
                            <h3>
                                <a href="{{ product.url }}">{{ product.title }}</a>
                            </h3>
                            <p>{{ product.price | money_without_trailing_zeros }}</p>
                        </div>
                    </div>
                </div>

            {%- else -%}

                <p>No Matches</p>

            {%- endfor -%}
        </div>


        {% render "pagination", paginate: paginate %}


    {% endpaginate %}


</div>
